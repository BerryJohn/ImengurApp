@model IQueryable<BetterUser>
@{
    ViewData["Title"] = "Admin User Panel";
}
<h1 class="h1">Users</h1>
<table class="table table-striped table-dark table-hover">
    <tr>
        <th>User ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Delete</th>
    </tr>
    <tbody>
        @foreach (var user in @Model)
        {
            <tr>
                <td>
                    @user.Id
                </td>
                <td>
                    @user.UserName
                </td>
                <td>
                    @user.Email
                </td>
                <td>
                    @if(user.UserName != User.Identity.Name)
                {
                    <a class="btn btn-danger" asp-controller="Admin" asp-action="DeleteUser" asp-route-Name="@user.UserName">Delete</a>
                }
                </td>
            </tr>
        }
    </tbody>
</table>