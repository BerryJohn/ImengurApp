@{
    ViewBag.UID = "UID";
}
<form asp-action="EditUser" method="post" asp-route-Id="@Model.UID">
    Login
    <input class="form-control" type="text" asp-for="Login" />
    <span asp-validation-for="Login" class="text-danger"></span>
    <br />
    Name
    <input class="form-control" type="text" asp-for="Name" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />
    Email
    <input class="form-control" type="text" asp-for="Email" />
    <span asp-validation-for="Email" class="text-danger"></span>
    <br />
    New Password
    <input class="form-control" type="password" id="Password" />
    <br />
    <span asp-validation-for="Password" class="text-danger"></span>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="NewPassword">
        <label class="form-check-label" for="newPassword">Change Password?</label>
    </div>
    <br />
    <button class="btn btn-success" type="submit">Save changes</button>
</form>