@model Imengur.Models.Image
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Title";
    ViewBag.File = "ImageData";
    ViewBag.Description = "Description";
}
<form asp-action="EditImage" method="post">
    <input class="form-control" type="text" placeholder="Title" asp-for="Title" value="@Model.Title" />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />
    <textarea class="form-control" placeholder="Description" asp-for="Description" value="@Model.Description"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
    <br />
    <input class="form-control" type="file" asp-for="ImageData" value="ImageData" />
    <span asp-validation-for="ImageData" class="text-danger"></span>
    <br />
    <button class="btn btn-success" type="submit">Save</button>
</form>