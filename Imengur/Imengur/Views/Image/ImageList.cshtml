@model ICollection<Imengur.Models.Image>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Uploaded images</h1>
<table class="table">
    <tr>
        <th>Image ID</th>
        <th>Title</th>
        <th>Date</th>
        <th>Image</th>
        <th>Description</th>
        <th>Options</th>
    </tr>
    <tbody>
        @foreach (var image in @Model)
        {
            <tr>
                <td>
                    @image.GID
                </td>
                <td>
                    @image.Title
                </td>
                <td>
                    @image.UploadDate
                </td>
                <td>
                    @image.ImageData
                </td>
                <td>
                    @image.Description
                </td>
                <td>
                    <a class="btn btn-danger" asp-controller="Image" asp-action="DeleteImage" asp-route-Id="@image.GID">Delete</a>
                    <a class="btn btn-primary" asp-controller="Image" asp-action="EditForm" asp-route-Id="@image.GID">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-controller="Image" asp-action="AddForm">Upload image</a>
